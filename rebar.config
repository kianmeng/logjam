{erl_opts, [{src_dirs, ["test"]}]}.

{deps, [
   {lcfg, {git, "https://github.com/lfex/lcfg.git", {tag, "0.5.0-rc1"}}},
   {lager, {git, "https://github.com/basho/lager.git", {tag, "3.2.1"}}},
   {color, {git, "https://github.com/julianduque/erlang-color", {tag, "v0.2.0"}}}
  ]}.

{plugins, [
   {'lfe-compile', {git, "https://github.com/lfe-rebar3/compile.git", {tag, "0.4.0"}}}
  ]}.

{provider_hooks, [
   {pre, [{compile, {lfe, compile}}]}
  ]}.

{profiles, [
  {dev, [
    {plugins, [
      {'lfe-version', {git, "https://github.com/lfe-rebar3/version.git", {tag, "0.3.2"}}},
      {'lfe-repl', {git, "https://github.com/lfe-rebar3/repl.git", {tag, "0.2.1"}}},
      {'lfe-clean', {git, "https://github.com/lfe-rebar3/clean.git", {tag, "0.2.1"}}}
      ]}
    ]},
   %% As an alternative to the default Github repos, you can use the Gitlab
   %% mirror with the following:
   %%   $ rebar3 as gitlab compile
   {gitlab, [
     {deps, [
        {lfe, {git, "https://gitlab.com/lfe/lfe.git", {tag, "v1.2.0"}}},
        {lcfg, {git, "https://github.com/lfex/lcfg.git", {tag, "0.5.0-rc1"}}},
        {color, {git, "https://gitlab.com/lfe-support/erlang-color.git", {tag, "0.2.0"}}}
        ]},
     {plugins, [
         {'lfe-compile', {git, "https://gitlab.com/lfe-rebar3/compile.git", {tag, "0.8.0-rc2"}}}]}
      ]},
   %% Or use Hex.pm instead with:
   %%   $ rebar3 as hexpm compile
   {hexpm, [
     {deps, [{lfe, "1.2.0"},
             {lcfg, "0.5.0-rc1"}
             {lager, "3.2.1"},
             {erlang_color, "0.2.0"}]},
     {plugins, [{rebar3_lfe_compile, "0.8.0-rc2"}]}
      ]},
   {dev, [
     {deps, [
       {lfe, {git, "https://github.com/rvirding/lfe.git", {tag, "v1.2.0"}}},
       {'lfe-version', {git, "https://github.com/lfe-rebar3/version.git", {tag, "0.5.0-rc2"}}}]},
     {plugins, [
       {'lfe-version', {git, "https://github.com/lfe-rebar3/version.git", {tag, "0.5.0-rc2"}}},
       {'lfe-clean', {git, "https://github.com/lfe-rebar3/version.git", {tag, "0.5.0-rc2"}}}]}
     ]},
   {test, [
     {deps, [
       {ltest, {git, "https://github.com/lfex/ltest.git", {tag, "0.10.0-rc2"}}},
       {'lfe-version', {git, "https://github.com/lfe-rebar3/version.git", {tag, "0.5.0-rc2"}}}]},
     {plugins, [
       {'lfe-test', {git, "https://github.com/lfe-rebar3/test.git", {tag, "0.4.0-rc2"}}}]},
     {eunit_opts, [verbose]},
     {erl_opts, [{src_dirs, ["src", "test"]}]}
    ]}
  ]}.
